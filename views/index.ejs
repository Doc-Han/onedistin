    <div class="w3-row w3-center page-wrap">
      <div class="w3-col left-lane w3-center w3-mobile">
            <section class="item-hero">
              <div id="hero-background"></div>
            </section>
          <div class="slideshow-container">

          <div class="mySlides fade">
            <img src="<%= img %>" style="width:100%;height:300px">
          </div>


          <div class="mySlides fade">
            <img src="img/nice2.jpg" style="width:100%;height:300px">
          </div>

          <div class="mySlides fade">
            <img src="img/nice3.jpg" style="width:100%;height:300px">
          </div>
          <div class="mySlides fade">
            <img src="img/nice4.jpg" style="width:100%;height:300px">
          </div>


          </div>
          <br>

          <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
            <span class="dot" onclick="currentSlide(4)"></span>
          </div>

          <div id="price-comparison">
            <a class="w3-text-indigo" href="<%- currentPost.shoppy_link %>">Costs GHS <%= currentPost.shoppy_price %> on <%= currentPost.shoppy_name %></a>
          </div><br>
          <div class="buy">
            <a style="padding: 3px 60px" class="w3-button w3-black w3-round-xxlarge" href="/checkout">
              <span class="w3-large"><b>GHS <%= currentPost.price %></b></span>
               <br>
              <span class="w3-medium">GET DISTIN</span>
            </a>
            <a style="padding: 17px 10px" class="w3-black w3-button w3-circle" href="#">Share</a>
          </div>
          <div class="w3-left-align">
            <%- currentPost.thingGet %>
          </div>
      </div>
      <div class="w3-col middle-lane w3-left w3-mobile w3-container">
        <span class=""><%- currentPost.writeup %></span>
      </div>
      <div class="w3-col right-lane w3-mobile">
          <iframe id="ytplayer" type="text/html" width="100%" height="168"
            src="<%= currentPost.video %>"
            frameborder="0"></iframe>
          <ul class="w3-ul w3-margin-top">
            <% forumPosts.forEach(function(item){ %>
              <a class="w3-left w3-container" href="/forum/<%= item.post_url %>"><li class="w3-padding" >
                <img class="w3-circle" src="http://via.placeholder.com/50x50" alt="">
                <%= item.post_title %>
              </li></a>
            <% }); %>
          </ul>
      </div>
    </div>
<script type="text/javascript">
var slideIndex = 1;
showSlides(slideIndex);

function plusSlides(n) {
showSlides(slideIndex += n);
}

function currentSlide(n) {
showSlides(slideIndex = n);
}

function showSlides(n) {
var i;
var slides = document.getElementsByClassName("mySlides");
var dots = document.getElementsByClassName("dot");
if (n > slides.length) {slideIndex = 1}
if (n < 1) {slideIndex = slides.length}
for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
}
for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
}
slides[slideIndex-1].style.display = "block";
dots[slideIndex-1].className += " active";
}
</script>
</script>
  </body>
</html>
