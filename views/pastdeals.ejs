<% include partials/header.ejs %>
    <div class="w3-row w3-margin-top">
      <div style="color: #fff" class="w3-quarter w3-container">
        .
      </div>
      <div class="w3-half w3-mobile w3-container">
        <ul class="w3-ul">
          <% pastdeals.forEach(function(item){ %>
            <li class="w3-bar">
              <img src="/img/nice1.jpg" class="w3-bar-item w3-border w3-round-xlarge" style="height:100px">
              <div class="w3-bar-item">
                <span class="w3-large"><b><%= item.post_title %></b></span><br>
                <span class="w3-opacity">Posted on <%= item.timestamp %> </span><br>
                <span class="w3-opacity">Current activity on post</span>
              </div>
              <div class="w3-bar-item w3-right">
                <i class="fa fa-heart-o w3-xxlarge"></i> 34 <br>
                <i class="fa fa-comment-o w3-xxlarge"></i> <%= item.post_comments %>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
      <div class="w3-quarter w3-container">

      </div>
    </div>

    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>-->
    <script src="js/forumsearch.js" type="text/javascript"></script>
  </body>
</html>
