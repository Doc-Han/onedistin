    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Past Deals</title>
    <meta name="description" content="Check out all the deals we sold in the past. Hint: This is where you finally realise how much money you could be saving if you were visiting Onedistin every day.">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

    <link rel="stylesheet" href="/css/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
  </head>
  <body style="position:relative">
<% include partials/header.ejs %>
    <div class="w3-row w3-margin-top">
      <div style="color: #fff" class="w3-quarter w3-container">

      </div>
      <div style="padding: 0" class="w3-half w3-mobile w3-container">
        <h1 style="margin-left:10px">Past Deals</h1>
        <ul class="w3-ul">
          <% if(hasPastDeal){ %>
            <% pastdeals.forEach(function(item){ %>
              <li style="padding: 0" class="w3-bar">
                <a href="/pastdeal/<%= item.timestamp %>"><img src="<%= item.pastdeal_img %>" class="w3-left w3-round-xlarge" style="height:100px;width:100px;margin:10px;"></a>
                <div style="padding-top: 5px;" class="w3-rest">
                  <a class="w3-text-black" href="/pastdeal/<%= item.timestamp %>"><span class="muli-bold" style="font-size:22px"><%= item.post_title %></span></a><br>
                  <span class="w3-opacity">Posted on <span class="time"><%= item.time %></span> </span><br>
                  <!--<span class="w3-opacity">Current activity on post</span>-->
                  <span class="w3-bar">
                    <a style="padding: 0;" href="/community/<%= item.post_url %>" class="w3-bar-item w3-text-black"><i class="fa fa-heart-o"></i> <%= item.post_likes %> <br></a>
                    <a style="padding: 0;" href="/community/<%= item.post_url %>" class="w3-bar-item w3-text-black"><i class="fa fa-comment-o"></i> <%= item.post_comments %></a>
                  </span>
                </div>
              </li>
            <% }); %>
          <% }else{ %>
            <div class="w3-center">
              <h1 class="muli-bold">No past deals available!</h1>
            </div>
          <% } %>
        </ul>
      </div>
      <div class="w3-quarter w3-container">

      </div>
    </div>

    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>-->

  </body>
