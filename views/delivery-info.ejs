<% include partials/header.ejs %>
<style media="screen">
  h3 {
    font-size: 22px;
    line-height: 22px;
  }
</style>
<div class="w3-row w3-center">
  <div class="w3-quarter w3-container">

  </div>
  <div style="margin-bottom:300px" class="w3-half w3-center w3-mobile w3-container w3-animate-bottom">
    <h3 style="text-align:left"><b>Your delivery info:</b></h3>
    <h4 style="text-align:left">Change fullname, address, city, and region.</h4>
    <form action="delivery-info" method="post">
    <div class="shipping-address">
      <dl>
        <dt> <label>Fullname</label> </dt>
        <dd> <input type="text" name="user_name" value="<%= user.user_name %>"> </dd>
        <dt> <label>Address</label> </dt>
        <dd> <input type="text" name="address" value="<%= user.user_address %>"> </dd>
        <dt> <label>City</label> </dt>
        <dd> <input type="text" name="city" value="<%= user.user_city %>"> </dd>
        <dt> <label>Region</label> </dt>
        <dd> <select name="region">
          <option value="<%= user.user_loc %>"><%= user.user_loc %></option>
          <option value="Ashanti">Ashanti</option>
          <option value="Brong Ahafo">Brong Ahafo</option>
          <option value="Central">Central</option>
          <option value="Eastern">Eastern</option>
          <option value="Greater Accra">Greater Accra</option>
          <option value="Northern">Northern</option>
          <option value="Upper East">Upper East</option>
          <option value="Upper West">Upper West</option>
          <option value="Volta">Volta</option>
          <option value="Western">Western</option>
        </select> </dd>
      </dl>
    </div>
    <button style="margin-bottom:10px;width:100%;" class="w3-button button-color-inverse w3-round-xxlarge w3-margin-top" type="submit" name="button"><h3 style="margin:0;font-size: 22px;line-height:46px">DassAll! Save it!</h3></button>
    </form>
  </div>
</div>
