<% include partials/header.ejs %>
<style media="screen">
  span {
    font-size: 22px;
  }
</style>
    <div class="w3-row w3-margin-top">
      <div class="w3-quarter w3-container">

      </div>
      <div style="margin-bottom:500px" class="w3-half w3-border w3-round-xxlarge w3-mobile w3-container">
        <% if(isAuthenticated){ %>
          <form action="/support" method="POST">
          <h2 class="muli-bold" style="font-size:32px">Dear Onedistin,</h2>
          <span style="text-align:left">This is about my
          <select name="complaint">
            <option value="0"> </option>
            <option value="puchase">a purchase</option>
            <option value="site">your site</option>
            <option value="account">my account</option>
            <option>blind rage</option>
            <option>pure bliss</option>
          </select>
        </span>
          <h3>Here's the issue</h3>
          <textarea name="issue" class="w3-input w3-round w3-border" style="height: 150px;"></textarea> <br>
          <span>You can write me back at
          <input class="w3-round-xxlarge w3-border" type="text" name="user_email" value="<%= currentUser.user_email %>"> </span> <br>
          <b>Or</b> <br>
          <span>Call me at
          <input class="w3-round-xxlarge w3-border" type="text" name="user_phone" value="<%= currentUser.user_phone %>"> </span>

          <h3>Your's truely</h3>
          <span><%= currentUser.user_name %></span>
          <button style="margin-bottom:10px;width:100%;" class="w3-button button-color-inverse w3-round-xxlarge w3-margin-top" type="submit" name="button"><h3 style="margin:0;font-size:22px;line-height:46px">Please help me!</h3></button>
        </form>
        <% }else{ %>
          <form action="/support" method="POST">
          <h2 class="muli-bold" style="font-size:32px">Dear Onedistin,</h2>
          <span style="text-align:left">This is about my
          <select name="complaint">
            <option value="0"> </option>
            <option value="puchase">a purchase</option>
            <option value="site">your site</option>
            <option value="account">my account</option>
            <option>blind rage</option>
            <option>pure bliss</option>
          </select>
        </span>
          <h3>Here's the issue</h3>
          <textarea name="issue" class="w3-input w3-round w3-border" style="height: 150px;"></textarea> <br>
          <span>You can write me back at
          <input class="w3-round-xxlarge w3-border" type="text" name="user_email" placeholder="email"> </span> <br>
          <b>Or</b> <br>
          <span>Call me at
          <input class="w3-round-xxlarge w3-border" type="text" name="user_phone" placeholder="mobile"> </span>

          <h3>Your's truely</h3>
          <span></span>
          <button style="margin-bottom:10px;width:100%;" class="w3-button button-color-inverse w3-round-xxlarge w3-margin-top" type="submit" name="button"><h3 style="margin:0;font-size:22px;line-height:46px">Please help me!</h3></button>
        </form>
        <% } %>

      </div>
      <div class="w3-quarter w3-bold w3-container">

      </div>
    </div>

  </body>
</html>
