  h3 {
    font-size: 22px;
    line-height: 22px;
  }
</style>
<div class="w3-row w3-center">
  <div class="w3-quarter w3-container">

  </div>
  <div style="margin-bottom:300px" class="w3-half w3-center w3-mobile w3-container w3-animate-bottom">
    <h3 style="text-align:left"><b>Your Info:</b></h3>
    <h4 style="text-align:left">Change username, email or phone.</h4>
    <form action="user-info" method="post">
    <dl>
      <dt> <label>Username</label> </dt>
      <dd> <input type="text" name="display_name" placeholder="Username" value="<%= user.display_name %>" required> </dd>
      <dt> <label>Email</label> </dt>
      <dd> <input type="text" name="user_email" placeholder="Email" value="<%= user.user_email %>" required> </dd>
      <dt> <label>Phone</label> </dt>
      <dd> <input type="text" name="user_phone" placeholder="Phone" value="<%= user.user_phone %>" required> </dd>
    </dl>
    <button style="margin-bottom:10px;width:100%;" class="w3-button button-color-inverse w3-round-xxlarge w3-margin-top" type="submit" name="button"><h3 style="margin:0;font-size: 22px;line-height:46px">DassAll! Save it</h3></button>
    </form>
  </div>
</div>
