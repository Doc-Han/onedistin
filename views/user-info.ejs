<% include partials/header.ejs %>


<div class="w3-row w3-center">
  <div class="w3-quarter w3-container">

  </div>
  <div style="margin-bottom:300px" class="w3-half w3-center w3-mobile w3-container w3-animate-bottom">
    <h3 style="text-align:left"><b>Your Info:</b></h3>
    <h4 style="text-align:left">Change username, password, email or phone.</h4>
    <form action="user-info" method="post">
    <dl>
      <dt> <label>Username</label> </dt>
      <dd> <input type="text" name="display_name" value="<%= user.display_name %>"> </dd>
      <dt> <label>Password</label> </dt>
      <dd> <input type="text" name="password" placeholder="Enter your new password" value=""> </dd>
      <dt> <label>Email</label> </dt>
      <dd> <input type="text" name="user_email" value="<%= user.user_email %>"> </dd>
      <dt> <label>Phone</label> </dt>
      <dd> <input type="text" name="user_phone" value="<%= user.user_phone %>"> </dd>
    </dl>
    <button style="margin-bottom:10px;width:100%;" class="w3-button w3-blue w3-round-xxlarge w3-margin-top" type="submit" name="button"><h3 style="margin:0">DassAll! Save it</h3></button>
    </form>
  </div>
</div>
