<% include partials/header.ejs %>
    <div class="w3-row w3-margin-top">
      <div style="color: #fff" class="w3-quarter w3-container">
        .
      </div>
      <div class="w3-half w3-mobile w3-container">
        <div class="w3-bar w3-row">
          <input class="w3-bar-item w3-input w3-border w3-col" id="searchbar" style="width:90%" placeholder="search here..." type="text" name="">
          <a class="w3-bar-item w3-button w3-border w3-col" id="searchbarGo" style="width:10%" href="#">Go</a>
        </div>

        <ul id="postList" class="w3-ul w3-container">
          <% posts.forEach(function(item){ %>
            <li class="w3-bar w3-border-bottom">
              <a href="/forum/<%= item.post_url %>" class=" w3-large w3-text-indigo">
                <%= item.post_title %>
              </a>
              <span class="w3-small w3-right"><%= item.timestamp %></span>
              <div class="w3-bar">
                <a class="w3-bar-item w3-button" href="#"> <i class="fa fa-heart-o"> 34 </i> </a>
                <a class="w3-bar-item w3-button" href="#"> <i class="fa fa-comment-o"> <%= item.post_comments %> </i> </a>
                <a class="w3-bar-item w3-button" href="#"> <i class="fa fa-star-o"> </i> </a>
              </div>
            </li>
          <% }); %>
        </ul>

      </div>
      <div class="w3-quarter w3-container">

      </div>
    </div>

    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>-->
    <script src="js/forumsearch.js" type="text/javascript"></script>
  </body>
</html>
