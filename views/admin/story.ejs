<% include partials/header.ejs %>

<div class="w3-row w3-margin-top">
  <% include partials/navs.ejs %>
  <div style="width:60%" class="w3-col w3-padding w3-center w3-card-4 w3-mobile">

    <p>Input your order number and add</p>
    <span id="story-adder">
    <hr>
    <div class="block">
    <div class="w3-row">
      <input style="width:90%;height:55px" class="w3-col w3-border" type="text" name="" placeholder="Story Title">
      <input class="num" style="width:10%;height:55px;text-align:center" class="w3-col w3-border" type="text" name="" value="1">
    </div>

    <textarea style="width:100%;height:100px" placeholder="Story Body" class="w3-round w3-border coupon-box"></textarea>
    <hr>
    </div>
    </span>
    <button class="story-add w3-button w3-black" type="button" name="button">Add</button>
  </div>
  <div style="width:20%" class="w3-col ">
    <ul class="w3-ul w3-bar-block">
      <li class="w3-bar-item w3-button">Nothing to show 1</li>
      <li class="w3-bar-item w3-button">Nothing to show 2</li>
      <li class="w3-bar-item w3-button">Nothing to show 3</li>
      <li class="w3-bar-item w3-button">Nothing to show 4</li>
    </ul>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $(".story-add").click(function(){
      var last = $("#story-adder .block:last-child .num").val();
      var nw = (last * 1)+1;
      $("#story-adder").append('<div class="block"><div class="w3-row"><input style="width:90%;height:55px" class="w3-col w3-border" type="text" name="" placeholder="Story Title"><input class="num" style="width:10%;height:55px;text-align:center" class="w3-col w3-border" type="text" name="" value="'+nw+'"></div><textarea style="width:100%;height:100px" placeholder="Story Body" class="w3-round w3-border coupon-box"></textarea><hr></div>');
    });

    $(".num").focusout(function(){
      alert($(this).val());
    });
  });
</script>
