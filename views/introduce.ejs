    <div class="w3-row w3-center">
      <div class="w3-quarter w3-container">

      </div>
      <div style="margin-bottom:300px" class="w3-half w3-center w3-mobile w3-container w3-animate-bottom">
        <h1>Introduce a friend</h1>
        <p style="text-align:left">Give a friend 100 points when you introduce them to onedistin and Get 100 points when they make their first purchase.</p>
        <div id="myInput" style="font-size:28px;overflow-x:scroll" class="w3-text-blue-grey w3-sand w3-border w3-round">
          http://onedistin.herokuapp.com/referer/4yk378j
        </div>
        <div class="tooltip">
          <button id="share" style="margin-bottom:10px;width:100%;" class="w3-button w3-blue w3-round-xlarge w3-margin-top" onmouseout="outFunc()">
            <span class="tooltiptext" id="myTooltip">Copy to clipboard</span>
            <h3 style="margin:0">Copy & Share</h3>
          </button>
        </div>
      </div>
      <div class="w3-quarter w3-container">

      </div>

      <script>
      $(document).ready(function(){
        $("#share").click(function(){
          var copyText = $("#myInput").text().trim();
          copyText.select();
          document.execCommand("copy");

          var tooltip = $("#myTooltip");
          tooltip.text("Copied: " + copyText.value);
        });
      });

      function outFunc() {
        var tooltip = document.getElementById("myTooltip");
        tooltip.innerHTML = "Copy to clipboard";
      }
      </script>
  </body>
